<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Proware Products</title>
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i">
    <link rel="stylesheet" href="assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="assets/fonts/simple-line-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css">
    <link rel="stylesheet" href="assets/css/smoothproducts.css">
    <link rel="stylesheet" href="assets/css/custom.css">
    <link rel="shortcut icon" href="assets/img/Owner.png" />
</head>

<body>
    <%- include('../partials/_navbar.html') %>
    <main class="page product-page">
        <section class="clean-block clean-product dark">
            <div class="container">
                <%- include('../partials/_heading.html') %>
                <%- include('../partials/_product_modal.html') %>
                <div class="block-content">
                    <div class="product-info">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="gallery text-center">
                                    <div class="sp-wrap"><a href="/proware/images/product/<%=itemImage%>"><img class="img-fluid d-block mx-auto" src="/proware/images/product/<%=itemImage%>"></a></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info">
                                    <h3 id="itemTitle"><span id="itemTitle"><%=itemDesc%></h3>
                                    <div class="price">
                                        <h6><em>Stocks: <%=itemQuantity%></em></h6>
                                        <h3>Php&nbsp;<span id="itemPrice"><%=itemPrice%></span></h3>
                                    </div>
                                    <div class="col-xl-4 col-lg-5 col-md-6 col-sm-5 col-5 row">
                                        <label>Quantity</label>
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                                <span class="quantity-left-minus btn btn-danger btn-number" data-type="minus" data-field="">
                                                    <span class="fa fa-minus"></span>
                                                </span>
                                            </span>
                                            <input id="quantity" name="quantity" class="form-control input-number" value="1" min="1" max="10">
                                            <span class="input-group-btn">
                                                <span class="quantity-right-plus btn btn-success btn-number" data-type="plus" data-field="">
                                                    <span class="fa fa-plus"></span>
                                                </span>
                                            </span>
                                        </div>
                                    </div><br />
                                    <%if ( itemQuantity == '0') {%>
                                    <button class="btn btn-danger" type="button" id="addToCart" disabled><i class="icon-basket"></i>Out of Stock</button>
                                    <%} else {%>
                                    <button class="btn btn-primary" type="button" id="addToCart"><i class="icon-basket"></i>Add to Cart</button>
                                    <%}%>
                                    <div class="summary">  
                                    <%=itemDesc%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('../partials/_footer.html') %>
    <script> const stocks = <%=itemQuantity%>; </script>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/jquery.inputmask.bundle.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="assets/js/smoothproducts.min.js"></script>
    <script src="assets/js/theme.js"></script>
    <script src="scripts/addtocart.js"></script>
    <script src="moment/moment.js"></script>

</body>

</html>