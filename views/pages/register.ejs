<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Register</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="vendors/iconfonts/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="vendors/css/vendor.bundle.base.css">
  <!-- spinner css -->
  <link rel="stylesheet" type="text/css" href="assets/css/loading.css" />
  <!-- end spinner css -->
  <!-- endinject -->
  <!-- inject:css -->
  <link rel="stylesheet" href="assets/css/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="assets/img/Owner.png" />
</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth">
        <div class="row w-100">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left p-5">
              <form class="pt-3">
                <div class="row">
                  <p class="card-description"> Student Info </p>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Student Level</label>
                  <div class="col-sm-4">
                    <div class="form-check">
                      <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="studentLevel" id="shsLevel" value="SHS" onclick="checkRadio()">
                        SHS
                      </label>
                    </div>
                  </div>
                  <div class="col-sm-5">
                    <div class="form-check">
                      <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="studentLevel" id="tertiaryLevel" value="tertiary" onclick="checkRadio()">
                        Tertiary
                      </label>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="studentNumber"> Student Number </label>
                  <input data-inputmask="'mask': '99999999999'" type="text" class="form-control form-control-lg" id="studentNumber" name="studentNumber" placeholder="Ex. 10001111111" required>
                </div>
                <div class="form-group">
                  <label for="firstName"> First Name </label>
                  <input data-inputmask-casing="title" type="text" class="form-control form-control-lg" id="firstName" name="firstName" placeholder="First Name" required>
                </div>
                <div class="form-group">
                  <label for="middleInitial">Middle Initial</label>
                  <input type="text" data-inputmask="'mask': 'A|-'" class="form-control" id="middleInitial" name="middleInitial" placeholder="Put dash ('-') if not applicable" maxlength="1" />
                </div>
                <div class="form-group">
                  <label for="lastName"> Last Name </label>
                  <input data-inputmask-casing="title" type="text" class="form-control form-control-lg" id="lastName" name="lastName" placeholder="Last Name" required>
                </div>
                <div class="row">
                  <p class="card-description"> Course / Strand </p>
                </div>
                <div class="form-group" id="warning">
                  <blockquote class="blockquote">
                    <p class="mb-0 text-center text-danger"><em><u>Please Select Student Level</u></em></p>
                  </blockquote>
                </div>
                <div class="form-group" id="level" hidden>
                  <select class="text-dark form-control form-control-lg" id="courseSelect" name="courseSelect" hidden>
                    <option value="" disabled selected>--Select Course--</option>
                    <% for (var i = 0; i < tertiary.length; i++) {%>
                    <option value='<%=tertiary[i].code%>'><%= tertiary[i].description%></option>
                    <% } %>
                  </select>

                  <select class="text-dark form-control form-control-lg" id="strandSelect" name="strandSelect">
                    <option value="" disabled selected>--Select Strand--</option>
                    <% for (var i = 0; i < shs.length; i++) {%>
                    <option value='<%=shs[i].code%>'><%= shs[i].description%></option>
                    <% } %>
                  </select>
                </div>
                <div class="mt-3">
                  <a style="color:white;" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" id="signupButton">SIGN UP </a>
                </div>
                <div class="mt-2 text-center">
                  <a href="/">Back to Login </a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <div class='spinner' hidden>
    <div class="lds-ring">
      <div></div>
      <div></div>
      <div></div>
      <div></div>
    </div>
  </div>

  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="vendors/js/vendor.bundle.base.js"></script>
  <script src="vendors/js/vendor.bundle.addons.js"></script>
  <!-- endinject -->
  <!-- inject:js -->
  <script src="assets/js/off-canvas.js"></script>
  <script src="assets/js/misc.js"></script>
  <script src="assets/js/jquery.inputmask.bundle.js"></script>

  <script src="scripts/register.js"></script>
  <!-- endinject -->
</body>

</html>